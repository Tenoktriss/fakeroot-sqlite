#                                          -*- shell-script -*-

me=`basename $0`
tmp=$me.dir
rm -rf $tmp
mkdir "$tmp"
trap 'rm -rf $tmp' EXIT

# The name of LD_PRELOAD on this platform.
LDPRELOADVAR=@LDPRELOADVAR@

debugargs=
case $VERBOSE in
  (x)  set -x;debugargs=--debug;;                # Debug mode.
  ('') exec >/dev/null 2>&1;;  # By default, be silent.
esac

run_fakeroot ()
{
  tmp="$tmp"                                    \
  $PWD/../scripts/fakeroot${tcp}                \
      -f $PWD/../faked${tcp}                    \
      -l $PWD/../.libs/${libfakeroot}           \
      $debugargs                                \
       "$@"
}
